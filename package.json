{
  "name": "template-api-nest-clean-arch",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "DEVMAYKINHO",
  "scripts": {
    "install": "npx husky install",
    "prebuild": "rimraf dist coverage",
    "nest": "npm run nest",
    "build": "tsc --build tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "start": "node dist/main.rest.js",
    "start:dev": "ts-node-dev src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "docker": "CURRENT_UID=$(id -u):$(id -g) docker-compose -f docker-compose.debug.yml up api",
    "test": "jest --passWithNoTests --logHeapUsage --maxWorkers=1 --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --passWithNoTests --logHeapUsage --maxWorkers=1 --forceExit --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "npm run test:unit:prepare && npm run test:unit:run",
    "precommit": "npm run test:statics",
    "prepush": "npm run test:statics && npm run test:dynamics"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.341.0",
    "@fastify/cors": "^8.2.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.3.12",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-express": "^9.3.12",
    "@nestjs/platform-fastify": "^9.3.12",
    "aws-sdk": "^2.1386.0",
    "cache-manager": "^4.1.0",
    "chai": "^4.3.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify": "^4.15.0",
    "fastify-multer": "^2.0.3",
    "fastify-multipart": "^5.4.0",
    "js-yaml": "^4.1.0",
    "mongoose": "^7.0.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.19.3/xlsx-0.19.3.tgz"
  },
  "devDependencies": {
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^9.3.12",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "28.0.3",
    "jest-mock-extended": "^3.0.4",
    "json-server": "^0.17.1",
    "lint-staged": "^13.2.0",
    "mongodb-memory-server": "^8.10.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/setup/**"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "clover",
      "cobertura",
      "lcov"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
